{
  "compilerOptions": {
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,  
    "outDir": "lib",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "target": "es5",                          
    "module": "commonjs",                 
    "lib": [
      "ES2020"
    ], 
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
